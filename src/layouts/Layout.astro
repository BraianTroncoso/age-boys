    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | AoE3 Tracker</title>
  </head>
  <body class="min-h-screen flex flex-col">
    {user && (
      <nav class="border-b-2 border-aoe-gold bg-aoe-darker/80 backdrop-blur-sm sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 py-3">
          <div class="flex items-center justify-between">
            <a href="/" class="flex items-center gap-2 sm:gap-3">
              <span class="text-xl sm:text-2xl">âš”ï¸</span>
              <span class="aoe-title text-lg sm:text-xl">AoE3 Tracker</span>
            </a>

            <!-- Desktop Menu -->
            <div class="hidden md:flex items-center gap-6">
              <a href="/" class="text-aoe-cream hover:text-aoe-gold transition-colors">
                Rankings
              </a>
              <a href="/matches" class="text-aoe-cream hover:text-aoe-gold transition-colors">
                Partidas
              </a>
              <a href="/matches/new" class="text-aoe-cream hover:text-aoe-gold transition-colors">
                + Nueva
              </a>
              <a href="/players" class="text-aoe-cream hover:text-aoe-gold transition-colors">
                Jugadores
              </a>
              <a href="/head-to-head" class="text-aoe-cream hover:text-aoe-gold transition-colors">
                H2H
              </a>
              <a href="/ruleta" class="text-aoe-cream hover:text-aoe-gold transition-colors">
                Ruleta
              </a>
              <a href="/torneos" class="text-aoe-cream hover:text-aoe-gold transition-colors">
                Torneos
              </a>
              <a href="/reglas" class="text-aoe-cream hover:text-aoe-gold transition-colors">
                Reglas
              </a>

              <div class="flex items-center gap-3 ml-4 pl-4 border-l border-aoe-gold/30">
                <a href="/profile" class="text-aoe-cream hover:text-aoe-gold text-sm transition-colors">
                  {user.username}
                </a>
                <a href="/api/auth/logout" class="text-aoe-red hover:text-red-400 text-sm transition-colors">
                  Salir
                </a>
              </div>
            </div>

            <!-- Mobile Menu Button -->
            <button id="mobile-menu-btn" class="md:hidden text-aoe-gold p-2" aria-label="Menu">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>

          <!-- Mobile Menu -->
          <div id="mobile-menu" class="hidden md:hidden mt-4 pb-2 border-t border-aoe-gold/30 pt-4">
            <div class="flex flex-col gap-3">
              <a href="/" class="text-aoe-cream hover:text-aoe-gold transition-colors py-2">
                ğŸ† Rankings
              </a>
              <a href="/matches" class="text-aoe-cream hover:text-aoe-gold transition-colors py-2">
                ğŸ“œ Partidas
              </a>
              <a href="/matches/new" class="text-aoe-gold hover:text-aoe-gold-light transition-colors py-2 font-semibold">
                â• Nueva Partida
              </a>
              <a href="/players" class="text-aoe-cream hover:text-aoe-gold transition-colors py-2">
                ğŸ‘¥ Jugadores
              </a>
              <a href="/head-to-head" class="text-aoe-cream hover:text-aoe-gold transition-colors py-2">
                âš”ï¸ Head to Head
              </a>
              <a href="/ruleta" class="text-aoe-cream hover:text-aoe-gold transition-colors py-2">
                ğŸ° Ruleta
              </a>
              <a href="/torneos" class="text-aoe-cream hover:text-aoe-gold transition-colors py-2">
                ğŸ† Torneos
              </a>
              <a href="/reglas" class="text-aoe-cream hover:text-aoe-gold transition-colors py-2">
                ğŸ“‹ Reglas
              </a>
              <div class="flex items-center gap-4 mt-2 pt-3 border-t border-aoe-gold/30">
                <a href="/profile" class="text-aoe-cream hover:text-aoe-gold transition-colors">
                  ğŸ‘¤ {user.username}
                </a>
                <a href="/api/auth/logout" class="text-aoe-red hover:text-red-400 transition-colors">
                  ğŸšª Salir
                </a>
              </div>
            </div>
          </div>
        </div>
      </nav>
    )}

    <script>
      const menuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');
      const menuIcon = document.getElementById('menu-icon');

      menuBtn?.addEventListener('click', () => {
        const isOpen = !mobileMenu?.classList.contains('hidden');
        mobileMenu?.classList.toggle('hidden');

        if (isOpen) {
          menuIcon?.setAttribute('d', 'M4 6h16M4 12h16M4 18h16');
        } else {
          menuIcon?.setAttribute('d', 'M6 18L18 6M6 6l12 12');
        }
      });
    </script>

    <main class="max-w-7xl mx-auto px-3 sm:px-4 py-4 sm:py-8 flex-grow">
      <slot />
    </main>

    <footer class="border-t border-aoe-gold/20 py-1 text-center">
      <span class="text-[10px] text-aoe-cream-dark/40">âšœ AoE3 Tracker Â· Para los boys âšœ</span>
    </footer>
  </body>
</html>
