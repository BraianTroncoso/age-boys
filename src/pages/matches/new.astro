---
import Layout from '../../layouts/Layout.astro';
import { db } from '../../db';
import { getCivilizationName, getCivilizationFlag } from '../../lib/civilizations';

const allPlayers = await db.users.findAll();
const players = allPlayers.filter(p => p.username !== 'admin');
---

<Layout title="Nueva Partida">
  <div class="max-w-3xl mx-auto space-y-4 sm:space-y-8">
    <div class="text-center">
      <h1 class="aoe-title text-2xl sm:text-3xl mb-2">Registrar Partida</h1>
      <p class="text-aoe-cream-dark text-sm sm:text-base">Selecciona el tipo y participantes</p>
    </div>

    {players.length < 2 ? (
      <div class="aoe-panel text-center py-8">
        <span class="text-5xl mb-4 block">‚ö†Ô∏è</span>
        <h2 class="aoe-title text-xl mb-2">Jugadores insuficientes</h2>
        <p class="text-aoe-cream-dark mb-4">
          Necesitas al menos 2 jugadores para registrar una partida.
        </p>
        <a href="/players" class="aoe-btn-primary inline-block">
          Agregar Jugadores
        </a>
      </div>
    ) : (
      <div class="aoe-panel">
        <form id="matchForm" class="space-y-6">
          <!-- Match Type -->
          <div>
            <label class="block text-sm font-semibold text-aoe-cream mb-2 sm:mb-3">
              Tipo de Partida
            </label>
            <div class="grid grid-cols-4 gap-2 sm:gap-3">
              <label class="cursor-pointer block">
                <input type="radio" name="matchType" value="1v1" class="peer hidden" checked />
                <div class="match-type-card peer-checked:!border-aoe-gold-light">
                  <span class="text-lg sm:text-2xl">‚öîÔ∏è</span>
                  <span class="text-xs sm:text-sm">1v1</span>
                </div>
              </label>
              <label class="cursor-pointer block">
                <input type="radio" name="matchType" value="2v2" class="peer hidden" />
                <div class="match-type-card peer-checked:!border-aoe-gold-light">
                  <span class="text-lg sm:text-2xl">‚öîÔ∏è</span>
                  <span class="text-xs sm:text-sm">2v2</span>
                </div>
              </label>
              <label class="cursor-pointer block">
                <input type="radio" name="matchType" value="3v3" class="peer hidden" />
                <div class="match-type-card peer-checked:!border-aoe-gold-light">
                  <span class="text-lg sm:text-2xl">‚öîÔ∏è</span>
                  <span class="text-xs sm:text-sm">3v3</span>
                </div>
              </label>
              <label class="cursor-pointer block">
                <input type="radio" name="matchType" value="ffa" class="peer hidden" />
                <div class="match-type-card peer-checked:!border-aoe-gold-light">
                  <span class="text-lg sm:text-2xl">üëë</span>
                  <span class="text-xs sm:text-sm">FFA</span>
                </div>
              </label>
            </div>
          </div>

          <!-- Players Container -->
          <div id="playersContainer" class="space-y-6">
            <!-- Team 1 / Players will be inserted here by JS -->
          </div>

          <div id="formError" class="hidden text-red-400 text-sm text-center p-2 bg-red-900/20 rounded"></div>

          <button type="submit" class="aoe-btn-primary w-full">
            Registrar Partida
          </button>
        </form>
      </div>
    )}
  </div>

  <!-- Modal de Victoria/Derrota -->
  <div id="resultModal" class="fixed inset-0 z-50 hidden flex items-center justify-center p-2 sm:p-4 backdrop-blur-md bg-black/90">
    <div class="text-center space-y-3 sm:space-y-4 w-full max-w-4xl">
      <canvas id="memeCanvas" class="mx-auto border-2 sm:border-4 border-aoe-gold rounded-lg shadow-[0_0_50px_rgba(218,165,32,0.5)] max-w-full h-auto" width="800" height="500"></canvas>

      <div class="flex flex-col sm:flex-row gap-2 sm:gap-4 justify-center px-4">
        <button id="downloadBtn" class="aoe-btn-primary text-sm sm:text-lg px-4 sm:px-8 py-2 sm:py-3">
          Descargar Imagen
        </button>
        <button id="closeModalBtn" class="aoe-btn text-sm sm:text-lg px-4 sm:px-8 py-2 sm:py-3">
          Ver Partidas
        </button>
      </div>
    </div>
  </div>
</Layout>

<script define:vars={{ players }}>
  const form = document.getElementById('matchForm');
  const playersContainer = document.getElementById('playersContainer');
  const errorDiv = document.getElementById('formError');
  const matchTypeInputs = document.querySelectorAll('input[name="matchType"]');

  // Map de jugadores por ID para obtener su civilizaci√≥n
  const playersMap = {};
  players.forEach(p => {
    playersMap[p.id] = p;
  });

  function createPlayerSelect(teamNum, playerNum, label) {
    return `
      <div class="space-y-2">
        <label class="block text-sm text-aoe-cream-dark">${label}</label>
        <select name="team${teamNum}_player${playerNum}" class="aoe-select" required>
          <option value="">Seleccionar jugador</option>
          ${players.map(p => `<option value="${p.id}" data-civ="${p.favoriteCiv}">${p.username}</option>`).join('')}
        </select>
        <div class="player-civ-display text-xs text-aoe-cream-dark/70 mt-1 hidden"></div>
      </div>
    `;
  }

  function updateCivDisplay(select) {
    const display = select.parentElement.querySelector('.player-civ-display');
    if (!display) return;

    const selectedOption = select.options[select.selectedIndex];
    if (selectedOption && selectedOption.value) {
      const player = playersMap[parseInt(selectedOption.value)];
      if (player && player.favoriteCiv) {
        display.textContent = `Civilizaci√≥n: ${player.favoriteCiv}`;
        display.classList.remove('hidden');
      }
    } else {
      display.classList.add('hidden');
    }
  }

  function renderMatchForm(matchType) {
    let html = '';

    if (matchType === '1v1') {
      html = `
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="aoe-card">
            <h3 class="aoe-title text-lg mb-4 text-green-400">üèÜ Ganador</h3>
            ${createPlayerSelect(1, 1, 'Jugador')}
          </div>
          <div class="aoe-card">
            <h3 class="aoe-title text-lg mb-4 text-red-400">üíÄ Perdedor</h3>
            ${createPlayerSelect(2, 1, 'Jugador')}
          </div>
        </div>
      `;
    } else if (matchType === '2v2' || matchType === '3v3') {
      const teamSize = matchType === '2v2' ? 2 : 3;
      let team1Players = '';
      let team2Players = '';

      for (let i = 1; i <= teamSize; i++) {
        team1Players += createPlayerSelect(1, i, `Jugador ${i}`);
        team2Players += createPlayerSelect(2, i, `Jugador ${i}`);
      }

      html = `
        <!-- Randomizer Section -->
        <div class="aoe-card mb-6">
          <h3 class="aoe-title text-lg mb-4">üé≤ Aleatorizar Equipos</h3>
          <div class="mb-4">
            <label class="block text-sm text-aoe-cream-dark mb-3">Selecciona ${teamSize * 2} jugadores:</label>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3" id="randomPlayerSelection">
              ${players.map(p => `
                <label class="cursor-pointer group">
                  <input type="checkbox" value="${p.id}" data-name="${p.username}" class="peer hidden random-player-checkbox" />
                  <div class="player-card aoe-card text-center border-2 border-aoe-gold/30 peer-checked:border-aoe-gold peer-checked:bg-gradient-to-br peer-checked:from-aoe-gold/30 peer-checked:to-amber-900/40 peer-checked:shadow-[0_0_20px_rgba(218,165,32,0.6)] transition-all py-3 hover:border-aoe-gold/50">
                    <span class="player-name text-sm block">${p.username}</span>
                    <span class="check-indicator text-green-400 text-lg">‚úì</span>
                  </div>
                </label>
              `).join('')}
            </div>
            <p class="text-aoe-cream-dark text-sm mt-3 text-center" id="selectedRandomCount">
              0 de ${teamSize * 2} jugadores seleccionados
            </p>
          </div>
          <button type="button" id="randomizeBtn" class="aoe-btn w-full">
            üé≤ Generar Equipos al Azar
          </button>
          <div id="randomResult" class="hidden mt-4 p-3 bg-aoe-gold/10 rounded border border-aoe-gold/30">
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="aoe-card" id="team1Card">
            <h3 class="aoe-title text-lg mb-4">‚öîÔ∏è Equipo 1</h3>
            <div class="space-y-4">${team1Players}</div>
          </div>
          <div class="aoe-card" id="team2Card">
            <h3 class="aoe-title text-lg mb-4">‚öîÔ∏è Equipo 2</h3>
            <div class="space-y-4">${team2Players}</div>
          </div>
        </div>

        <!-- Selector de equipo ganador -->
        <div class="aoe-card mt-6">
          <h3 class="aoe-title text-lg mb-4">üèÜ ¬øQui√©n gan√≥?</h3>
          <div class="grid grid-cols-2 gap-4">
            <button type="button" data-winner="1" class="team-winner-btn aoe-btn py-4 text-lg border-2 border-green-500 bg-green-500/20 text-green-400">
              üèÜ Equipo 1 Gan√≥
            </button>
            <button type="button" data-winner="2" class="team-winner-btn aoe-btn py-4 text-lg border-2 border-aoe-brown-light hover:border-green-500/50">
              üèÜ Equipo 2 Gan√≥
            </button>
          </div>
          <input type="hidden" name="winningTeam" value="1" />
        </div>
      `;
    } else if (matchType === 'ffa') {
      html = `
        <!-- FFA Player Selection -->
        <div class="aoe-card mb-6">
          <h3 class="aoe-title text-lg mb-4">üëë Selecciona los Jugadores</h3>
          <p class="text-sm text-aoe-cream-dark mb-3">Selecciona entre 3 y ${players.length} jugadores para el FFA:</p>
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3" id="ffaPlayerSelection">
            ${players.map(p => `
              <label class="cursor-pointer group">
                <input type="checkbox" value="${p.id}" data-name="${p.username}" class="peer hidden ffa-player-checkbox" />
                <div class="player-card aoe-card text-center border-2 border-aoe-gold/30 peer-checked:border-aoe-gold peer-checked:bg-gradient-to-br peer-checked:from-aoe-gold/30 peer-checked:to-amber-900/40 peer-checked:shadow-[0_0_20px_rgba(218,165,32,0.6)] transition-all py-3 hover:border-aoe-gold/50">
                  <span class="player-name text-sm block">${p.username}</span>
                  <span class="check-indicator text-green-400 text-lg">‚úì</span>
                </div>
              </label>
            `).join('')}
          </div>
          <p class="text-aoe-cream-dark text-sm mt-3 text-center" id="selectedFfaCount">
            0 jugadores seleccionados (m√≠nimo 3)
          </p>
          <button type="button" id="applyFfaBtn" class="aoe-btn-primary w-full mt-4" disabled>
            Confirmar Jugadores
          </button>
        </div>

        <!-- FFA Teams Display (hidden until applied) -->
        <div id="ffaTeamsContainer" class="hidden">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="aoe-card" id="ffaWinnerCard">
              <h3 class="aoe-title text-lg mb-4 text-green-400">üèÜ Ganador</h3>
              <p class="text-aoe-cream-dark text-sm text-center py-4">Selecciona el ganador</p>
            </div>
            <div class="aoe-card" id="ffaLosersCard">
              <h3 class="aoe-title text-lg mb-4 text-red-400">üíÄ Perdedores</h3>
              <p class="text-aoe-cream-dark text-sm text-center py-4">Los dem√°s ser√°n perdedores</p>
            </div>
          </div>
          <div class="aoe-card mt-6">
            <button type="button" id="resetFfaBtn" class="aoe-btn w-full text-sm">
              üîÑ Cambiar jugadores
            </button>
          </div>
        </div>
      `;
    }

    playersContainer.innerHTML = html;

    // Add change listeners to show civilization and validate duplicates
    document.querySelectorAll('select[name^="team"]').forEach(select => {
      select.addEventListener('change', () => {
        updateCivDisplay(select);
        validateDuplicatePlayers();
      });
    });

    function validateDuplicatePlayers() {
      const allSelects = document.querySelectorAll('select[name^="team"]');
      const selectedValues = [];

      // Reset all selects to normal state
      allSelects.forEach(s => {
        s.classList.remove('border-red-500', 'bg-red-500/10');
      });
      errorDiv?.classList.add('hidden');

      // Collect selected values
      allSelects.forEach(s => {
        if (s.value) {
          selectedValues.push({ value: s.value, element: s });
        }
      });

      // Find duplicates
      const seen = {};
      const duplicates = [];
      selectedValues.forEach(item => {
        if (seen[item.value]) {
          duplicates.push(item.value);
        }
        seen[item.value] = true;
      });

      // Mark duplicates
      if (duplicates.length > 0) {
        selectedValues.forEach(item => {
          if (duplicates.includes(item.value)) {
            item.element.classList.add('border-red-500', 'bg-red-500/10');
          }
        });
        errorDiv.textContent = 'No pod√©s seleccionar el mismo jugador m√°s de una vez';
        errorDiv?.classList.remove('hidden');
      }
    }

    // Handle team randomizer
    if (matchType === '2v2' || matchType === '3v3') {
      const teamSize = matchType === '2v2' ? 2 : 3;
      const randomizeBtn = document.getElementById('randomizeBtn');
      const randomResult = document.getElementById('randomResult');
      const selectedRandomCount = document.getElementById('selectedRandomCount');

      // Update selected count when checkboxes change
      function updateRandomSelectedCount() {
        const checked = document.querySelectorAll('.random-player-checkbox:checked').length;
        const required = teamSize * 2;
        selectedRandomCount.textContent = `${checked} de ${required} jugadores seleccionados`;

        if (checked === required) {
          selectedRandomCount.classList.add('text-green-400');
          selectedRandomCount.classList.remove('text-aoe-cream-dark');
        } else {
          selectedRandomCount.classList.remove('text-green-400');
          selectedRandomCount.classList.add('text-aoe-cream-dark');
        }
      }

      document.querySelectorAll('.random-player-checkbox').forEach(cb => {
        cb.addEventListener('change', updateRandomSelectedCount);
      });

      randomizeBtn?.addEventListener('click', () => {
        const checkboxes = document.querySelectorAll('.random-player-checkbox:checked');

        const selectedPlayers = Array.from(checkboxes).map(cb => ({
          id: cb.value,
          name: cb.dataset.name
        }));

        if (selectedPlayers.length !== teamSize * 2) {
          randomResult.innerHTML = `<p class="text-red-400">Selecciona exactamente ${teamSize * 2} jugadores (ten√©s ${selectedPlayers.length} seleccionados)</p>`;
          randomResult.classList.remove('hidden');
          return;
        }

        // Shuffle array
        const shuffled = [...selectedPlayers].sort(() => Math.random() - 0.5);

        // Split into teams
        const team1 = shuffled.slice(0, teamSize);
        const team2 = shuffled.slice(teamSize);

        // Show result
        randomResult.innerHTML = `
          <div class="grid grid-cols-2 gap-4 text-center">
            <div>
              <p class="text-green-400 font-semibold mb-2">Equipo 1</p>
              ${team1.map(p => `<p class="text-aoe-cream">${p.name}</p>`).join('')}
            </div>
            <div>
              <p class="text-red-400 font-semibold mb-2">Equipo 2</p>
              ${team2.map(p => `<p class="text-aoe-cream">${p.name}</p>`).join('')}
            </div>
          </div>
          <button type="button" id="applyRandomBtn" class="aoe-btn-primary w-full mt-4">
            Aplicar a los campos
          </button>
        `;
        randomResult.classList.remove('hidden');

        // Apply button
        document.getElementById('applyRandomBtn')?.addEventListener('click', () => {
          const team1Card = document.getElementById('team1Card');
          const team2Card = document.getElementById('team2Card');

          // Replace team1 selects with fixed cards
          team1Card.innerHTML = `
            <h3 class="aoe-title text-lg mb-4">‚öîÔ∏è Equipo 1</h3>
            <div class="space-y-3">
              ${team1.map((p, i) => {
                const player = playersMap[parseInt(p.id)];
                const civ = player?.favoriteCiv || 'spanish';
                return `
                  <div class="flex items-center gap-3 p-3 bg-aoe-dark/50 rounded border border-aoe-gold/30">
                    <div class="w-10 h-10 rounded-full bg-gradient-to-br from-aoe-gold/30 to-amber-900/40 flex items-center justify-center text-lg">
                      ‚öîÔ∏è
                    </div>
                    <div>
                      <p class="font-semibold text-aoe-cream">${p.name}</p>
                      <p class="text-xs text-aoe-cream-dark">Civilizaci√≥n: ${civ}</p>
                    </div>
                    <input type="hidden" name="team1_player${i + 1}" value="${p.id}" />
                  </div>
                `;
              }).join('')}
            </div>
          `;

          // Replace team2 selects with fixed cards
          team2Card.innerHTML = `
            <h3 class="aoe-title text-lg mb-4">‚öîÔ∏è Equipo 2</h3>
            <div class="space-y-3">
              ${team2.map((p, i) => {
                const player = playersMap[parseInt(p.id)];
                const civ = player?.favoriteCiv || 'spanish';
                return `
                  <div class="flex items-center gap-3 p-3 bg-aoe-dark/50 rounded border border-aoe-gold/30">
                    <div class="w-10 h-10 rounded-full bg-gradient-to-br from-aoe-gold/30 to-amber-900/40 flex items-center justify-center text-lg">
                      ‚öîÔ∏è
                    </div>
                    <div>
                      <p class="font-semibold text-aoe-cream">${p.name}</p>
                      <p class="text-xs text-aoe-cream-dark">Civilizaci√≥n: ${civ}</p>
                    </div>
                    <input type="hidden" name="team2_player${i + 1}" value="${p.id}" />
                  </div>
                `;
              }).join('')}
            </div>
          `;

          randomResult.innerHTML = `
            <p class="text-green-400 text-center mb-2">‚úì Equipos aplicados!</p>
            <button type="button" id="resetTeamsBtn" class="aoe-btn w-full text-sm">
              üîÑ Volver a aleatorizar
            </button>
          `;

          // Reset button to re-randomize
          document.getElementById('resetTeamsBtn')?.addEventListener('click', () => {
            renderMatchForm(matchType);
          });

          // Re-setup winner buttons after DOM change
          setupWinnerButtons();
        });
      });

      // Handle winner selection buttons
      setupWinnerButtons();
    }

    function setupWinnerButtons() {
      const winnerBtns = document.querySelectorAll('.team-winner-btn');
      const winningTeamInput = document.querySelector('input[name="winningTeam"]');
      const team1Card = document.getElementById('team1Card');
      const team2Card = document.getElementById('team2Card');

      winnerBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          const winner = btn.dataset.winner;
          winningTeamInput.value = winner;

          // Update button styles
          winnerBtns.forEach(b => {
            if (b.dataset.winner === winner) {
              b.classList.add('border-green-500', 'bg-green-500/20', 'text-green-400');
              b.classList.remove('border-aoe-brown-light', 'hover:border-green-500/50');
            } else {
              b.classList.remove('border-green-500', 'bg-green-500/20', 'text-green-400');
              b.classList.add('border-aoe-brown-light', 'hover:border-green-500/50');
            }
          });

          // Update card styles to show winner/loser
          if (winner === '1') {
            team1Card.classList.add('border-green-500/50');
            team1Card.classList.remove('border-red-500/50');
            team2Card.classList.add('border-red-500/50');
            team2Card.classList.remove('border-green-500/50');
          } else {
            team2Card.classList.add('border-green-500/50');
            team2Card.classList.remove('border-red-500/50');
            team1Card.classList.add('border-red-500/50');
            team1Card.classList.remove('border-green-500/50');
          }
        });
      });
    }

    // Handle FFA player selection
    if (matchType === 'ffa') {
      const selectedFfaCount = document.getElementById('selectedFfaCount');
      const applyFfaBtn = document.getElementById('applyFfaBtn');
      let ffaPlayers = [];

      function updateFfaSelectedCount() {
        const checked = document.querySelectorAll('.ffa-player-checkbox:checked').length;
        selectedFfaCount.textContent = `${checked} jugadores seleccionados (m√≠nimo 3)`;

        if (checked >= 3) {
          selectedFfaCount.classList.add('text-green-400');
          selectedFfaCount.classList.remove('text-aoe-cream-dark');
          applyFfaBtn.disabled = false;
        } else {
          selectedFfaCount.classList.remove('text-green-400');
          selectedFfaCount.classList.add('text-aoe-cream-dark');
          applyFfaBtn.disabled = true;
        }
      }

      document.querySelectorAll('.ffa-player-checkbox').forEach(cb => {
        cb.addEventListener('change', updateFfaSelectedCount);
      });

      // Apply FFA players
      applyFfaBtn?.addEventListener('click', () => {
        const checkboxes = document.querySelectorAll('.ffa-player-checkbox:checked');
        ffaPlayers = Array.from(checkboxes).map(cb => ({
          id: cb.value,
          name: cb.dataset.name
        }));

        // Hide selection, show teams
        document.querySelector('#ffaPlayerSelection').closest('.aoe-card').classList.add('hidden');
        document.getElementById('ffaTeamsContainer').classList.remove('hidden');

        // Create winner selection cards
        const ffaWinnerCard = document.getElementById('ffaWinnerCard');
        ffaWinnerCard.innerHTML = `
          <h3 class="aoe-title text-lg mb-4 text-green-400">üèÜ Ganador</h3>
          <p class="text-sm text-aoe-cream-dark mb-3">Selecciona qui√©n gan√≥:</p>
          <div class="space-y-2" id="ffaWinnerSelection">
            ${ffaPlayers.map(p => {
              const player = playersMap[parseInt(p.id)];
              const civ = player?.favoriteCiv || 'spanish';
              return `
                <label class="cursor-pointer block">
                  <input type="radio" name="ffaWinner" value="${p.id}" class="peer hidden ffa-winner-radio" />
                  <div class="flex items-center gap-3 p-3 bg-aoe-dark/50 rounded border-2 border-aoe-gold/30 peer-checked:border-green-500 peer-checked:bg-green-500/10 transition-all hover:border-aoe-gold/50">
                    <div class="w-8 h-8 rounded-full bg-gradient-to-br from-aoe-gold/30 to-amber-900/40 flex items-center justify-center text-sm">
                      üëë
                    </div>
                    <div class="flex-1">
                      <p class="font-semibold text-aoe-cream">${p.name}</p>
                      <p class="text-xs text-aoe-cream-dark">${civ}</p>
                    </div>
                    <span class="hidden peer-checked:block text-green-400">‚úì</span>
                  </div>
                </label>
              `;
            }).join('')}
          </div>
        `;

        // Create losers display (will update when winner is selected)
        const ffaLosersCard = document.getElementById('ffaLosersCard');
        ffaLosersCard.innerHTML = `
          <h3 class="aoe-title text-lg mb-4 text-red-400">üíÄ Perdedores</h3>
          <div id="ffaLosersDisplay" class="space-y-2">
            <p class="text-aoe-cream-dark text-sm text-center py-4">Selecciona un ganador primero</p>
          </div>
        `;

        // Handle winner selection
        document.querySelectorAll('.ffa-winner-radio').forEach(radio => {
          radio.addEventListener('change', (e) => {
            const winnerId = e.target.value;
            const losers = ffaPlayers.filter(p => p.id !== winnerId);

            // Update losers display
            const ffaLosersDisplay = document.getElementById('ffaLosersDisplay');
            ffaLosersDisplay.innerHTML = losers.map((p, i) => {
              const player = playersMap[parseInt(p.id)];
              const civ = player?.favoriteCiv || 'spanish';
              return `
                <div class="flex items-center gap-3 p-3 bg-aoe-dark/50 rounded border border-red-500/30">
                  <div class="w-8 h-8 rounded-full bg-gradient-to-br from-red-500/30 to-red-900/40 flex items-center justify-center text-sm">
                    üíÄ
                  </div>
                  <div class="flex-1">
                    <p class="font-semibold text-aoe-cream">${p.name}</p>
                    <p class="text-xs text-aoe-cream-dark">${civ}</p>
                  </div>
                  <input type="hidden" name="team2_player${i + 1}" value="${p.id}" />
                </div>
              `;
            }).join('');

            // Add hidden input for winner
            const existingWinnerInput = document.querySelector('input[name="team1_player1"]');
            if (existingWinnerInput) existingWinnerInput.remove();

            const winnerInput = document.createElement('input');
            winnerInput.type = 'hidden';
            winnerInput.name = 'team1_player1';
            winnerInput.value = winnerId;
            ffaWinnerCard.appendChild(winnerInput);
          });
        });

        // Reset button
        document.getElementById('resetFfaBtn')?.addEventListener('click', () => {
          renderMatchForm('ffa');
        });
      });
    }
  }

  // Initial render
  renderMatchForm('1v1');

  // Listen for match type changes
  matchTypeInputs.forEach(input => {
    input.addEventListener('change', (e) => {
      renderMatchForm(e.target.value);
    });
  });

  // Form submission
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    errorDiv?.classList.add('hidden');

    const formData = new FormData(form);
    const matchType = formData.get('matchType');

    const data = {
      matchType,
      participants: []
    };

    // Helper to get player's civilization
    function getPlayerCiv(playerId) {
      const player = playersMap[parseInt(playerId)];
      return player?.favoriteCiv || 'spanish';
    }

    // Collect participants based on match type
    if (matchType === '1v1') {
      const p1 = formData.get('team1_player1');
      const p2 = formData.get('team2_player1');
      data.participants = [
        { playerId: parseInt(p1), civilization: getPlayerCiv(p1), team: 1, isWinner: true },
        { playerId: parseInt(p2), civilization: getPlayerCiv(p2), team: 2, isWinner: false },
      ];
    } else if (matchType === '2v2' || matchType === '3v3') {
      const teamSize = matchType === '2v2' ? 2 : 3;
      const winningTeam = parseInt(formData.get('winningTeam')) || 1;

      for (let i = 1; i <= teamSize; i++) {
        const p1 = formData.get(`team1_player${i}`);
        if (p1) data.participants.push({ playerId: parseInt(p1), civilization: getPlayerCiv(p1), team: 1, isWinner: winningTeam === 1 });

        const p2 = formData.get(`team2_player${i}`);
        if (p2) data.participants.push({ playerId: parseInt(p2), civilization: getPlayerCiv(p2), team: 2, isWinner: winningTeam === 2 });
      }
    } else if (matchType === 'ffa') {
      const winner = formData.get('team1_player1');
      data.participants.push({ playerId: parseInt(winner), civilization: getPlayerCiv(winner), team: null, isWinner: true });

      // Collect all losers
      let i = 1;
      while (formData.get(`team2_player${i}`)) {
        const loser = formData.get(`team2_player${i}`);
        data.participants.push({ playerId: parseInt(loser), civilization: getPlayerCiv(loser), team: null, isWinner: false });
        i++;
      }
    }

    // Check for duplicate players
    const playerIds = data.participants.map(p => p.playerId);
    if (new Set(playerIds).size !== playerIds.length) {
      errorDiv.textContent = 'No puedes seleccionar el mismo jugador m√°s de una vez';
      errorDiv?.classList.remove('hidden');
      return;
    }

    try {
      const response = await fetch('/api/matches', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (result.success) {
        // Obtener nombres de perdedores
        const losers = data.participants
          .filter(p => !p.isWinner)
          .map(p => playersMap[p.playerId]?.username || 'Desconocido');

        const winners = data.participants
          .filter(p => p.isWinner)
          .map(p => playersMap[p.playerId]?.username || 'Desconocido');

        // Generar meme y mostrar modal
        generateMeme(losers, winners);
        document.getElementById('resultModal')?.classList.remove('hidden');
      } else {
        errorDiv.textContent = result.error || 'Error al registrar partida';
        errorDiv?.classList.remove('hidden');
      }
    } catch (err) {
      errorDiv.textContent = 'Error de conexi√≥n';
      errorDiv?.classList.remove('hidden');
    }
  });

  // Frases argentinas para el meme (versi√≥n picante)
  const frasesArgentinas = [
    "A CASA PETE",
    "SOS UN DESASTRE HERMANO",
    "TERRIBLE BOLUDO",
    "QU√â HIJO DE PUTA MALO",
    "DEJ√Å DE HACER EL RID√çCULO",
    "TOMATEL√Å PELOTUDO",
    "SOS M√ÅS MALO QUE PATEAR UN PERRO",
    "TE COGIERON DE PARADO",
    "TE ROMPIERON EL ORTO",
    "AND√Å A CAGAR FLACO",
    "LA CONCHA DE TU MADRE",
    "QU√â VERG√úENZA PAP√Å",
    "NI EN PEDO VOLV√âS A GANAR",
    "CHUPAME LA PIJA",
    "QU√â MAL QUE JUG√ÅS DIOS M√çO",
    "SOS UN QUESO TERRIBLE",
    "TE GARCHARON AMIGO",
    "SACATE LA CAMISETA PETE",
    "VOLV√â A LA B MOG√ìLICO",
    "AND√Å A JUGAR A LA PLAY NENE",
  ];

  const subFrases = [
    "Sos un desastre con patas",
    "Ni tu vieja te banca jugando",
    "La pr√≥xima jug√° al solitario mejor",
    "Tu civilizaci√≥n te repudia",
    "Hasta un pibe de 5 a√±os te gana",
    "Dej√° el mouse y and√° a terapia",
    "Sos m√°s manco que el manco de lepanto",
    "Met√© F10 F10 y dej√° de joder",
    "Sos tan malo que das ternura",
    "Tu teclado se quiere suicidar",
    "Ni con walls te salv√°s crack",
    "Dale la PC a alguien que sepa",
  ];

  function generateMeme(losers, winners) {
    const canvas = document.getElementById('memeCanvas');
    const ctx = canvas.getContext('2d');

    // Fondo degradado oscuro
    const gradient = ctx.createLinearGradient(0, 0, 0, canvas.height);
    gradient.addColorStop(0, '#1a0f0a');
    gradient.addColorStop(0.5, '#2d1810');
    gradient.addColorStop(1, '#1a0f0a');
    ctx.fillStyle = gradient;
    ctx.fillRect(0, 0, canvas.width, canvas.height);

    // Borde dorado
    ctx.strokeStyle = '#DAA520';
    ctx.lineWidth = 8;
    ctx.strokeRect(4, 4, canvas.width - 8, canvas.height - 8);

    // Borde interior
    ctx.strokeStyle = '#8B6914';
    ctx.lineWidth = 2;
    ctx.strokeRect(15, 15, canvas.width - 30, canvas.height - 30);

    // Decoraci√≥n de esquinas
    const cornerSize = 30;
    ctx.fillStyle = '#DAA520';
    // Esquinas decorativas
    ctx.beginPath();
    ctx.moveTo(15, 15);
    ctx.lineTo(15 + cornerSize, 15);
    ctx.lineTo(15, 15 + cornerSize);
    ctx.fill();

    ctx.beginPath();
    ctx.moveTo(canvas.width - 15, 15);
    ctx.lineTo(canvas.width - 15 - cornerSize, 15);
    ctx.lineTo(canvas.width - 15, 15 + cornerSize);
    ctx.fill();

    ctx.beginPath();
    ctx.moveTo(15, canvas.height - 15);
    ctx.lineTo(15 + cornerSize, canvas.height - 15);
    ctx.lineTo(15, canvas.height - 15 - cornerSize);
    ctx.fill();

    ctx.beginPath();
    ctx.moveTo(canvas.width - 15, canvas.height - 15);
    ctx.lineTo(canvas.width - 15 - cornerSize, canvas.height - 15);
    ctx.lineTo(canvas.width - 15, canvas.height - 15 - cornerSize);
    ctx.fill();

    // Frase principal random
    const frase = frasesArgentinas[Math.floor(Math.random() * frasesArgentinas.length)];
    const subFrase = subFrases[Math.floor(Math.random() * subFrases.length)];

    // Sombra para textos
    ctx.shadowColor = 'rgba(0, 0, 0, 0.9)';
    ctx.shadowBlur = 15;
    ctx.shadowOffsetX = 4;
    ctx.shadowOffsetY = 4;

    // Nombre del perdedor grande
    ctx.fillStyle = '#FF3333';
    ctx.font = 'bold 58px Arial, sans-serif';
    ctx.textAlign = 'center';
    const loserText = losers.length > 1 ? losers.join(' & ') : losers[0];
    ctx.fillText(loserText.toUpperCase(), canvas.width / 2, 90);

    // L√≠nea decorativa
    ctx.strokeStyle = '#DAA520';
    ctx.lineWidth = 3;
    ctx.beginPath();
    ctx.moveTo(100, 120);
    ctx.lineTo(canvas.width - 100, 120);
    ctx.stroke();

    // Frase principal GRANDE
    ctx.fillStyle = '#DAA520';
    ctx.font = 'bold 64px Arial, sans-serif';
    ctx.fillText(frase, canvas.width / 2, 200);

    // Emoji de burla
    ctx.font = '80px Arial';
    ctx.fillText('üòÇüíÄü§°', canvas.width / 2, 300);

    // Sub frase
    ctx.fillStyle = '#C4A574';
    ctx.font = 'italic 28px Arial, sans-serif';
    ctx.fillText(`"${subFrase}"`, canvas.width / 2, 370);

    // L√≠nea decorativa
    ctx.beginPath();
    ctx.moveTo(100, 400);
    ctx.lineTo(canvas.width - 100, 400);
    ctx.stroke();

    // Ganador
    ctx.fillStyle = '#44FF44';
    ctx.font = 'bold 36px Arial, sans-serif';
    const winnerText = winners.length > 1 ? winners.join(' & ') : winners[0];
    ctx.fillText(`DESTRUIDO POR: ${winnerText.toUpperCase()}`, canvas.width / 2, 450);

    // Reset shadow
    ctx.shadowColor = 'transparent';
  }

  // Descargar imagen
  document.getElementById('downloadBtn')?.addEventListener('click', () => {
    const canvas = document.getElementById('memeCanvas');
    const link = document.createElement('a');
    link.download = 'a-casa-pete.png';
    link.href = canvas.toDataURL('image/png');
    link.click();
  });

  // Cerrar modal
  document.getElementById('closeModalBtn')?.addEventListener('click', () => {
    window.location.href = '/matches';
  });
</script>

